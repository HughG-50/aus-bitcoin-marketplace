<div class="text-left">
  <div class="form-container">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-item">
        <%= f.label :password, "New password" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"Password (6 characters minimum)", class:"form-control" %>
      </div>

      <div class="field form-item">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password Confirmation", class:"form-control" %>
      </div>

      <div class="actions form-submit">
        <%= f.submit "Change my password", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
