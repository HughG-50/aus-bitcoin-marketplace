<% if user_signed_in? %>
    <%= link_to "logout", destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to "login", new_user_session_path %>
<% end %>

<h2>Buy Bitcoins</h2>

<h4> <%= @listing.title %> </h4>

<ul>
    <li> <%= @listing.user.username %> </li>
    <li> <%= number_to_percentage(@listing.user.feedback_score, precision: 1) %>, <%= @listing.user.num_completed_listings %> listings</li>
    <li> Price/BTC: <%= number_to_currency(@listing.price_BTC_AUD) %> </li>
    <li> Amount: <%= number_to_currency(@listing.amount) %> </li>
    <li> Payment Method: <%= @listing.payment_method %> </li>
    <li> Location: <%= @listing.user.city %>, <%= @listing.user.country %> </li>
    <li> Description: <%= @listing.description %> </li>
</ul>

